# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_NAME=tactical_champions
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4
DB_PORT=3306

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME="Tactical Champions"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate a random 32-character key for encryption
# You can generate one using: php -r "echo bin2hex(random_bytes(16));"
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# ========================================
# GAME CONFIGURATION
# ========================================
# Energy regeneration settings
ENERGY_REGEN_RATE=10
ENERGY_REGEN_INTERVAL=600
MAX_ENERGY=100

# Starting resources for new players
STARTING_GOLD=100
STARTING_GEMS=0
STARTING_ENERGY=100

# Experience requirements
PLAYER_LEVEL_MULTIPLIER=100
CHAMPION_LEVEL_MULTIPLIER=50

# Lootbox drop rates (in percentage)
LOOTBOX_DROP_CHANCE=20.00

# Champion rarity drop rates (should total 100)
RARITY_COMMON=50
RARITY_RARE=30
RARITY_EPIC=15
RARITY_LEGENDARY=4
RARITY_MYTHIC=1

# ========================================
# BATTLE CONFIGURATION
# ========================================
MAX_CHAMPIONS_PER_BATTLE=5
BATTLE_TIMEOUT=300

# ========================================
# ADMIN CONFIGURATION
# ========================================
# Default admin credentials (CHANGE THESE!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@tacticalgame.com
DEFAULT_ADMIN_PASSWORD=admin123

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
MAIL_ENABLED=false
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tacticalgame.com
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# CACHE CONFIGURATION (Optional)
# ========================================
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0
REDIS_ENABLED=false

# ========================================
# MAINTENANCE MODE
